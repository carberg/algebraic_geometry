proc redRepNN(ideal E, list N, poly c) {
  // Basering is @RP.
  int i;

  ideal E_rad = radical(E);

  poly h = 1;
  if (size(N) > 0) {
    for (i = 1; i <= size(N); i++) {
      h = h * N[i];
    }
  }

  poly h1 = reduce(h * c, groebner(E_rad));
  // Quotient function here may not terminate.
  ideal E_res = quotient(E_rad, ideal(h1));
  h1 = reduce(h1, groebner(E_res));
  list N_res = getNSquareFreeFromProd(h1);

  return (E_res, N_res);
  
}

