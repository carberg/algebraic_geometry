proc set_global_rings_mcgb() {
  // Basering is K[U][X].

  if (defined(@R)) {
    kill @R; kill @P; kill @RP;
  }

  def BR = basering;
  def @R = basering;

  def Rx = ringlist(BR);
  def @P = ring(Rx[1]);
  
  Rx[1] = 0;
  def D = ring(Rx);
  def @RP = D + @P;
  
  exportto(Top, @R);
  exportto(Top, @P);
  exportto(Top, @RP);

  setring(BR);
}

proc ideal_exclude(ideal I, ideal J) {
  // Basering is @RP.
  if (size(I) == 0) {
    return (ideal());
  }


  if (size(J) == 0) {
    return (I);
  }

  poly prod_J = 1;
  int i, j;
  for (i = 1; i <= size(J); i++) {
    prod_J = prod_J * J[i];
  }
  ideal FL_J = factorize(prod_J, 1);

  for (i = 1; i <= size(I); i++) {
    for (j = 1; j <= size(FL_J); j++) {
      if (reduce(I[i], groebner(ideal(FL_J[j]))) == 0) {
	I[i] = I[i] / FL_J[j];
      }
    }
  }

  return (radical(I));
}

proc getNSquareFreeFromProd(poly h) {
  // Basering is @RP.
  ideal FL = factorize(h, 1);
  if (size(FL) == 0) {
    return (list(0));
  }

  int i;
  list res_list;
  for (i = 1; i <= size(FL); i++) {
    res_list = insert(res_list, FL[i], size(res_list));
  }

  return (res_list);
}

proc idealUnion(ideal I, ideal J) {
  // Basering is @RP.
  int i;
  int n = size(I);

  for (i = 1; i <= size(J); i++) {
    I[n + i] = J[i];
  }

  return (I);
}


proc redRepN(ideal E, list N, poly c) {
  // Basering is @RP.

  // reduce c by radical(E).
  ideal E_rad = radical(E);
  poly c_red = reduce(c, groebner(E_rad));

  ideal E1 = radical(E_rad + ideal(c_red));
  
  poly h = 1;
  if (size(N) > 0) {
    int i; 
    for (i = 1; i <= size(N); i++) {
      h = h * N[i];
    }
  }

  ideal E_res = quotient(E1, ideal(h));

  // Modification: reduce h by E_res.
  h = reduce(h, groebner(E_res));
  list N_res = getNSquareFreeFromProd(h);
  
  return (E_res, N_res);
}

