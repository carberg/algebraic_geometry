	    g_new = monic(g_new);
	    if (g_new == g_old) {
	      fprintf(special_out, "%s is already normal form.", showParamPoly(g_new));
	      BL_final = BL_old;
	      g_final = g_old;
	      break;
	    }
	    fprintf(special_out, "%s is reduced to %s", g_old, g_new);
	    M_new = insert(M, g_new, size(M));
	    (is_essential, BL_new) = checkEssential(cur_g, M_new, modcgs);
	    if (is_essential) {
	      fprintf(special_out, "%s is not covered, stop." + newline, g_old);
	      terminate_flag = 1;
	      BL_final = BL_old;
	      g_final = g_old;
	    } else {
	      fprintf(special_out, "%s is covered, continue." + newline, g_old);
	      BL_old = BL_new;
	      g_old = g_new;
	    }
	  }
	  if (g_final != cur_g) {
	    modcgs = updateCGS(modcgs, cur_g, BL_final);
	    M = substPolyInList(M, cur_g, g_final);
	    fprintf(special_out, "Substitute %s for %s in M.", showParamPoly(g_final), showParamPoly(cur_g));
	  }
	}
      }
    } // End if.

    
  } // End for.

  ideal M_ideal;
  for (i = 1; i <= size(M); i++) {
    M_ideal = insertPolyToIdeal(M_ideal, M[i]);
  }

  def MCGB = M_ideal;
  def cgs_mcgb = modcgs;
  
  // Switch back to BR.
  if (ring_flag) {
    setring BR;
    def MCGB = imap(@RP, MCGB);
    def cgs_mcgb = imap(@RP, cgs_mcgb);
  }

  return (MCGB, cgs_mcgb);
}

