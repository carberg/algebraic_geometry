module Polynomial where

import Data.List

data Polynomial = Uni [Double]

instance Show Polynomial where
show (Uni []) = ""
show (Uni nl@(n:ns)) = 
  let degree = length nl - 1
  in  case degree of
        0 -> show n
        _ -> show n ++ " x^" ++ show degree ++ " + "
               ++ show (Uni ns)